{
  "manifest_version": 3,
  "name": "Harkley AI Meeting Recorder",
  "version": "1.0.0",
  "description": "Professional meeting recording and transcription with AI-powered insights",

  "permissions": ["scripting", "tabs", "storage", "activeTab", "desktopCapture"],

  "host_permissions": ["http://localhost:*/*", "https://*/*"],

  "action": {
    "default_popup": "popup.html",
    "default_title": "Harkley AI Recorder",
    "default_icon": {
      "16": "assets/icon-16.png",
      "32": "assets/icon-32.png",
      "128": "assets/icon-128.png"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],

  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "128": "assets/icon-128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
